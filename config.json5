{
  // ==================== 基本设置 ====================
  deviceId: "device-001",
  timeout: 5000,
  retryCount: 3,
  pollingInterval: 5000,

  // ==================== 运行环境 ====================
  NODE_ENV: "development",
  PORT: 3000,
  HOST: "127.0.0.1",

  // ==================== 日志配置 ====================
  LOG_LEVEL: "info",
  LOG_PRETTY: true,

  // ==================== 柜体继电器板配置 ====================
  CABINET_HOST: "192.168.110.248",
  CABINET_PORT: 50000,

  // ==================== 操作台继电器板配置 ====================
  CONTROL_SERIAL_PATH: "/dev/ttyUSB0",
  CONTROL_SERIAL_BAUDRATE: 9600,
  CONTROL_SERIAL_DATABITS: 8,
  CONTROL_SERIAL_STOPBITS: 1,
  CONTROL_SERIAL_PARITY: "none",

  // ==================== 语音播报配置 ====================
  VOICE_CABINET_VOLUME: 1,
  VOICE_CABINET_SPEED: 5,
  VOICE_CONTROL_VOLUME: 1,
  VOICE_CONTROL_SPEED: 5,

  // ==================== 硬件通用配置 ====================
  HARDWARE_TIMEOUT: 5000,
  HARDWARE_RETRY_ATTEMPTS: 3,
  ENABLE_HARDWARE_SIMULATOR: false,
  ENABLE_METRICS: true,
  UDP_LOCAL_PORT: 8000,
  QUERY_INTERVAL: 1000,
  DOOR_OPEN_TIMEOUT_S: 10,
  VIBRATION_THROTTLE_INTERVAL_MS: 5000,
  AUTH_RETRY_INTERVAL_S: 5,  // 授权等待超时重试间隔（秒）

  // ==================== 供弹柜输入索引 ====================
  APPLY_SWITCH_INDEX: 0,              // 申请按钮
  CABINET_DOOR_SWITCH_INDEX: 1,       // 柜门状态
  DOOR_LOCK_SWITCH_INDEX: 2,          // 门锁开关
  KEY_SWITCH_INDEX: 3,                // 钥匙开关
  VIBRATION_SWITCH_INDEX: 4,          // 振动开关

  // ==================== 控制柜输入索引 ====================
  ALARM_CANCEL_SWITCH_INDEX: 8,      // 报警取消
  AUTH_CANCEL_SWITCH_INDEX: 9,       // 授权取消
  AUTH_PASS_SWITCH_INDEX: 10,         // 授权通过

  // ==================== 供弹柜输出索引 ====================
  CONTROL_ALARM_RELAY_INDEX: 0,    // 报警指示灯
  DOOR_LOCK_RELAY_INDEX: 1,       // 门锁开关

  // ==================== 控制柜输出索引 ====================
  APPLY_LIGHT_RELAY_INDEX: 0,            // 供弹申请灯
  DOOR_LOCK_SWITCH_LIGHT_RELAY_INDEX: 1, // 门锁开关灯
  ALARM_LIGHT_RELAY_INDEX: 3,            // 报警指示灯
  CABINET_DOOR_RELAY_INDEX: 2,           // 柜门开关灯

  // ==================== 传感器状态反转 ====================
  // true: 闭合状态为报警状态，断开状态为正常状态
  // false: 断开状态为报警状态，闭合状态为正常状态
  INVERT_SENSOR_STATE: false,  // 柜门、钥匙、门锁传感器状态反转
}
