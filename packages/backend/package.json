{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API for node-switch project",
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean",
    "dev": "tsx watch src/index.ts",
    "start": "node -r dotenv/config dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "backend",
    "api",
    "express",
    "hardware-controller"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@node-switch/core": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.3",
    "pino": "^10.1.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "shared": "workspace:*",
    "socket.io": "^4.8.3",
    "xstate": "^5.12.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.3",
    "socket.io-client": "^4.8.3",
    "supertest": "^7.1.4",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
