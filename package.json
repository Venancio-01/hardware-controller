{
  "name": "node-switch",
  "version": "1.0.0",
  "description": "A monorepo for node-switch project",
  "type": "module",
  "scripts": {
    "build": "pnpm --recursive run build",
    "build:arm7": "bash scripts/build-arm7.sh",
    "build:arm7:clean": "bash scripts/build-arm7.sh --clean",
    "dev": "pnpm --recursive run dev",
    "test": "pnpm --recursive run test",
    "lint": "pnpm --recursive run lint",
    "clean": "pnpm --recursive run clean"
  },
  "keywords": [
    "node-switch",
    "monorepo",
    "hardware-controller"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0"
  },
  "pnpm": {
    "workspaces": [
      "packages/*"
    ]
  }
}
