{
  "name": "hardware-controller",
  "version": "1.0.0",
  "description": "Bun + TypeScript hardware communication",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --clean --out-dir dist",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "echo \"Pending migration to Vitest\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "bun",
    "typescript",
    "udp",
    "tcp",
    "hardware",
    "communication"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/iconv-lite": "^0.0.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "iconv-lite": "^0.7.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "xstate": "^5.12.1",
    "zod": "^4.2.1"
  }
}
