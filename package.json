{
  "name": "node-switch",
  "version": "1.0.0",
  "description": "Bun + TypeScript hardware communication",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build ./src/index.ts --outfile ./dist/index.js --target bun",
    "build:binary": "bun build ./src/index.ts --compile --outfile ./dist/node-switch-bun",
    "start": "bun run src/index.ts",
    "clean": "rm -rf dist",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "bun",
    "typescript",
    "udp",
    "tcp",
    "hardware",
    "communication"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "bun@1.1.0",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/iconv-lite": "^0.0.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "iconv-lite": "^0.7.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "xstate": "^5.12.1",
    "zod": "^4.2.1"
  }
}
