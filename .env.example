# 本地开发环境配置
NODE_ENV=development
PORT=3000
HOST=127.0.0.1

LOG_LEVEL=info
LOG_PRETTY=true

# 硬件通信配置 - 柜体端 (TCP)
CABINET_HOST=192.168.1.101
CABINET_PORT=50000

# 硬件通信配置 - 控制端 (Serial)
CONTROL_SERIAL_PATH=/dev/ttyUSB0
CONTROL_SERIAL_BAUDRATE=9600
CONTROL_SERIAL_DATABITS=8
CONTROL_SERIAL_STOPBITS=1
CONTROL_SERIAL_PARITY=none

# 语音播报配置
VOICE_CABINET_VOLUME=10
VOICE_CABINET_SPEED=5
VOICE_CONTROL_VOLUME=10
VOICE_CONTROL_SPEED=5


# 全局硬件配置
HARDWARE_TIMEOUT=5000
HARDWARE_RETRY_ATTEMPTS=3

# 功能开关
ENABLE_HARDWARE_SIMULATOR=false
ENABLE_METRICS=true

# 新增配置
UDP_LOCAL_PORT=8000
QUERY_INTERVAL=1000
DOOR_OPEN_TIMEOUT_S=30

# 硬件输入索引配置 (0-15)
APPLY_INDEX=0
CABINET_DOOR_INDEX=1
ELECTRIC_LOCK_IN_INDEX=2
MECHANICAL_LOCK_INDEX=3
VIBRATION_ALARM_INDEX=4
SWITCH_06_INDEX=5
DEVICE_STATUS_INDEX=6
CABINET_ALARM_LIGHT_INDEX=7
CONTROL_ALARM_LIGHT_INDEX=8
ELECTRIC_LOCK_OUT_INDEX=9
ALARM_STATUS_INDEX=10
AUTH_INDEX=11
AUTH_CANCEL_INDEX=12
SWITCH_26_INDEX=13
SWITCH_27_INDEX=14
SWITCH_28_INDEX=15

# 硬件继电器索引配置 (1-32)
RELAY_LOCK_INDEX=2
RELAY_CABINET_ALARM_INDEX=8
RELAY_CONTROL_ALARM_INDEX=1
